<Window x:Class="ArwinTolentino.CookingRecipePortal.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArwinTolentino.CookingRecipePortal.Windows"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="580*"/>
            <ColumnDefinition Width="213*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnRecipes" Content="RECIPES" HorizontalAlignment="Left" Margin="41,30,0,0" VerticalAlignment="Top" Width="130" Height="46" Click="btnRecipes_Click"/>
        <Button x:Name="btnUsers" Content="USERS" HorizontalAlignment="Left" Margin="41,81,0,0" VerticalAlignment="Top" Width="130" Height="46" Click="btnUsers_Click"/>
        <Button x:Name="btnIngredients" Content="INGREDIENTS" HorizontalAlignment="Left" Margin="41,132,0,0" VerticalAlignment="Top" Width="130" Height="46" Click="btnIngredients_Click"/>
        <Button x:Name="btnTags" Content="TAGS" HorizontalAlignment="Left" Margin="41,183,0,0" VerticalAlignment="Top" Width="130" Height="46" Click="btnTags_Click"/>

    </Grid>
</Window>
